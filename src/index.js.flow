// @flow
import type { CSSProperties } from './types/css-properties.js';
import type { SVGProperties } from './types/svg-properties.js';

export type { CSSProperties, SVGProperties };

type FunctionalReactComponent<Props> = (props: Props) => ?React$Element<*>;
type ReactClassComponent<Props> = Class<React$Component<void, Props, void>>;

export type ExtraGlamorousProps = {
  innerRef?: (instance: any) => void,
  css?: CSSProperties,
  className?: string
};

export type GlamorousComponent<Props> = ReactClassComponent<Props & ExtraGlamorousProps> & {
  withComponent: (tagName: string) => GlamorousComponent<Props>
};

export type GlamorousOptions = {
  displayName?: string,
  rootEl?: string | Element,
  forwardProps?: string[],
  propsAreCssOverrides?: boolean
};

export type CSSStyles<Props> =
  | CSSProperties
  | Array<CSSProperties>
  | ((props: Props, theme?: Object) => CSSProperties);
export type SVGStyles<Props> =
  | SVGProperties
  | Array<SVGProperties>
  | ((props: Props, theme?: Object) => SVGProperties);

export type GlamorousFactoryHTMLComponent<Props, ExtraProps> = (
  ...styles: Array<CSSStyles<ExtraProps>>
) => GlamorousComponent<Props & ExtraProps>;

export type GlamorousFactorySVGComponent<Props, ExtraProps> = (
  ...styles: Array<SVGStyles<ExtraProps>>
) => GlamorousComponent<Props & ExtraProps>;

declare export var ThemeProvider: ReactClassComponent<{ theme: Object }>;
declare export function withTheme<Props>(
  component: FunctionalReactComponent<Props>
): GlamorousComponent<$Diff<Props, { theme: Object }>>;

